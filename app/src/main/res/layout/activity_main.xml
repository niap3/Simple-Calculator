<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="72sp"
        android:textAlignment="textEnd"
        android:paddingRight="24dp"
        android:paddingBottom="8dp"
        android:textColor="@color/black"
        android:layout_above="@+id/button_layout"
        android:id="@+id/result_tv">
    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text=""
        android:textSize="42sp"
        android:textAlignment="textEnd"
        android:paddingRight="24dp"
        android:paddingTop="8dp"
        android:textColor="@color/black"
        android:layout_above="@+id/result_tv"
        android:id="@+id/query_tv">
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/button_layout"
        android:layout_alignParentBottom="true"
        android:background="#E7DEFF"
        android:paddingTop="12dp"
        android:paddingBottom="12dp">

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttons_C"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:layout_width="74dp"
                android:layout_height="80dp"
                android:layout_margin="12dp"
                android:backgroundTint="#9F83E8"
                android:fontFamily="sans-serif"
                android:text="C"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:cornerRadius="50dp">
                >

            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttons_openBracket"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:layout_width="74dp"
                android:layout_height="80dp"
                android:layout_margin="12dp"
                android:backgroundTint="#9F83E8"
                android:fontFamily="sans-serif"
                android:text="("
                android:textColor="@color/black"
                android:textSize="24sp"
                app:cornerRadius="50dp">

            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttons_closeBracket"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:layout_width="74dp"
                android:layout_height="80dp"
                android:layout_margin="12dp"
                android:backgroundTint="#9F83E8"
                android:text=")"
                android:textColor="@color/black"
                android:textSize="24sp"
                app:cornerRadius="50dp">

            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttons_divide"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:layout_width="74dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:backgroundTint="#301F5C"
                android:fontFamily="sans-serif"
                android:text="/"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:cornerRadius="50dp">

            </com.google.android.material.button.MaterialButton>

        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttons_7"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:layout_width="74dp"
                android:layout_height="80dp"
                android:layout_margin="12dp"
                android:fontFamily="sans-serif"
                android:text="7"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:cornerRadius="50dp">

            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttons_8"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:layout_width="74dp"
                android:layout_height="80dp"
                android:layout_margin="12dp"
                android:fontFamily="sans-serif"
                android:text="8"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:cornerRadius="50dp">

            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttons_9"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:layout_width="74dp"
                android:layout_height="80dp"
                android:layout_margin="12dp"
                android:fontFamily="sans-serif"
                android:text="9"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:cornerRadius="50dp">

            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttons_multiply"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:layout_width="74dp"
                android:layout_height="80dp"
                android:layout_margin="12dp"
                android:backgroundTint="#301F5C"
                android:fontFamily="sans-serif"
                android:text="*"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:cornerRadius="50dp">

            </com.google.android.material.button.MaterialButton>

        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttons_4"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="78dp"
                android:layout_margin="12dp"
                android:fontFamily="sans-serif"
                android:text="4"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:cornerRadius="50dp">

            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttons_5"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="78dp"
                android:layout_margin="12dp"
                android:fontFamily="sans-serif"
                android:text="5"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:cornerRadius="50dp">

            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttons_6"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="78dp"
                android:layout_margin="12dp"
                android:fontFamily="sans-serif"
                android:text="6"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:cornerRadius="50dp">

            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttons_minus"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="78dp"
                android:layout_margin="12dp"
                android:backgroundTint="#301F5C"
                android:fontFamily="sans-serif"
                android:text="-"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:cornerRadius="50dp">

            </com.google.android.material.button.MaterialButton>

        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttons_1"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="78dp"
                android:layout_margin="12dp"
                android:fontFamily="sans-serif"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:cornerRadius="50dp">

            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttons_2"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="78dp"
                android:layout_margin="12dp"
                android:fontFamily="sans-serif"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:cornerRadius="50dp">

            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttons_3"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="78dp"
                android:layout_margin="12dp"
                android:fontFamily="sans-serif"
                android:text="3"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:cornerRadius="50dp">

            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttons_plus"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="78dp"
                android:layout_margin="12dp"
                android:backgroundTint="#301F5C"
                android:fontFamily="sans-serif"
                android:text="+"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:cornerRadius="50dp">

            </com.google.android.material.button.MaterialButton>

        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttons_AC"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="78dp"
                android:layout_margin="12dp"
                android:backgroundTint="#9F83E8"
                android:fontFamily="sans-serif"
                android:text="AC"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:cornerRadius="50dp">

            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttons_zero"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="78dp"
                android:layout_margin="12dp"
                android:fontFamily="sans-serif"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:cornerRadius="50dp">

            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttons_point"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="78dp"
                android:layout_margin="12dp"
                android:fontFamily="sans-serif"
                android:text="."
                android:textColor="@color/white"
                android:textSize="24sp"
                app:cornerRadius="50dp">

            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttons_equals"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="78dp"
                android:layout_margin="12dp"
                android:backgroundTint="#301F5C"
                android:fontFamily="sans-serif"
                android:text="="
                android:textColor="@color/white"
                android:textSize="24sp"
                app:cornerRadius="50dp">

            </com.google.android.material.button.MaterialButton>

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>
